<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Créer un compte</title>
</head>
<body>
    <div class="home">
        <a href="/"><img src="images/logo.png" alt="logo"></a>
    </div>

    <div class="SignupForm">
        <h1>Créer un compte</h1>
        <form action="/auth/Creer_un_compte" method="POST">
            <div class="formGroup">
                <label for="username">Pseudo</label>
                <input type="username" id="username" name="username" placeholder="Votre pseudo" required>
            </div>
            <div class="formGroup">
                <label for="gender">Genre</label>
                <select id="gender" name="gender">
                    <option value="M">Homme</option>
                    <option value="F">Femme</option>
                </select>
            </div>
            <div class="formGroup">
                <label for="interestedBy">Qui cherchez-vous?</label>
                <select id="interestedBy" name="interestedBy">
                    <option value="M">Homme</option>
                    <option value="F">Femme</option>
                </select>
            </div>

            <div class="formGroup">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" placeholder="Votre email" required>
            </div>
            <div class="formGroup">
                <label for="password">Mot de passe</label>
                <input type="password" id="password" name="password" placeholder="Votre mot de passe" required>
            </div>
            <div class="formGroup">
                <label for="confirmPassword">Confirmer le mot de passe</label>
                <input type="password" id="confirmPassword" name="confirmPassword" placeholder="Confirmez votre mot de passe" required>
            </div>
            <button type="submit">S'enregistrer</button>
        </form>
        <p>Vous avez déjà un compte ? <a href="/Se_connecter">Se connecter</a></p>
    </div>

    <% if ((typeof message !== 'undefined' && message)){ %>
        <div class="alert alert-success"><%= message %></div>
    <% } %>

</body>
</html>